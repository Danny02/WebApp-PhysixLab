<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:de.hofuniversity.iws.client.widgets"
             xmlns:playn='urn:import:de.hofuniversity.iws.client.playn'>
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        #contentAreaLesson {
        font-family: Arial, sans-serif;
        font-size: 14px;
        background: rgba(109,232,150,0.7);
        height: 1080px;
        }

        #content {
        position: relative; 
        width: 960px;
        margin: 0px auto;
        }

        #content h1 {
        position: absolute;
        top: 75px; 
        left: 40px;
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        font-family: geosans;
        font-size: 60px;
        }

        #content h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }

        .element {
        position: absolute;
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }

        .thumbnail {
        width: 40px;
        height: 40px;
        }

        #literature {
        top: 195px; 
        left: 40px;
        width: 400px;
        min-height: 680px;
        }

        .exper {
        top: 75px; 
        left: 520px;
        width: 400px;
        height: 360px;
        }
        
        #formu {
        top: 515px; 
        left: 520px;
        width: 400px;
        height: 360px;        
        }
        #playn-root {
        width: 400px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div id="contentAreaLesson">
            <div id="content">
                <h1 ui:field="theme"></h1>
                <div class="{style.element}" id="literature">
                    <div class="{style.innerElement}">
                        <h2 ui:field="title"></h2>
                        <p ui:field="text"></p>
                    </div>              
                </div>
                <g:VerticalPanel styleName="{style.element} {style.exper}">
                    <g:VerticalPanel styleName="{style.innerElement}">                        
                        <playn:PlayNWidget ui:field="experiment"/>
                    </g:VerticalPanel>
                </g:VerticalPanel>             
                <div class="{style.element}" id="formu">
                    <g:VerticalPanel styleName="{style.innerElement}">
                        <my:MathWidget ui:field="formular"/>
                    </g:VerticalPanel>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>