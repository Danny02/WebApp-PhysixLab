<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        .wrap {
        font-family: Arial, sans-serif;
        font-size: 14px;
        height: 160px;
        position: relative; 
        width: 400px;
        margin: 0px auto;
        left: 40px;
        }

        .wrap h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }
        
        .element {
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }
        
        .subject {
        position: absolute;
        width: 240px;
        height: 120px;
        top: 0px;
        left: 160px;
        }
        
        .outerImage {
        position: absolute;
        background: rgb(255,255,255);
        width: 120px;
        height: 120px;
        border-radius: 120px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        -webkit-transition:0.2s ease;
        -o-transition:0.2s ease;
        -moz-transition:0.2s ease;
        -ms-transition:0.2s ease;
        transition:0.2s ease;
        }
        
        .outerImage:hover {
        background: rgb(65,150,255);
        }

        .innerImage {
        border-radius: 110px;
        padding: 5px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="wrap" styleName="{style.wrap}">
            <g:FocusPanel ui:field="oImg" styleName="{style.outerImage}">
                <g:Image ui:field="iImg" styleName="{style.innerImage}" />
            </g:FocusPanel>
            <div class="{style.element} {style.subject}">
                <div class="{style.innerElement}">
                    <h2 ui:field="title"></h2>
                    <p ui:field="text"></p>
                </div>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>