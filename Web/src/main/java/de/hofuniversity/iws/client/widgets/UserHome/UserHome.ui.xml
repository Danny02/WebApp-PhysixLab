<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my='urn:import:de.hofuniversity.iws.client.widgets.UserHome' 
             xmlns:header='urn:import:de.hofuniversity.iws.client.widgets'
             xmlns:bread='urn:import:de.hofuniversity.iws.client.widgets.SubWidgets'>
             
    <ui:style type='de.hofuniversity.iws.client.widgets.UserHome.UserHome.UserHomeStyle'>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }
        
        span {
        position: absolute;
        left: 50%;
        -webkit-transition:1.0s ease;
        -o-transition:1.0s ease;
        -moz-transition:1.0s ease;
        -ms-transition:1.0s ease;
        transition:1.0s ease;
        }
        
        .posStatistik {
        margin-left: -480px;
        }
        
        .posThemenwahl {
        margin-left: -1440px;
        }
        
        .posFreunde {
        margin-left: -2400px;
        }
        
        .posProfile {
        margin-left: -3360px;
        }
        
        .tab {
        position: absolute;
        left: 50%;
        width: 120px;
        height: 60px;
        top: 95px;
        border-top-left-radius: 50px;
        border-top-right-radius: 50px;
        -webkit-transition: 0.2s;
        -o-transition: 0.2s;
        -moz-transition: 0.2s;
        -ms-transition: 0.2s;
        transition: 0.2s;
        }
        
        .tab:hover {
        color: rgb(65,150,255);
        }

        .tab1 {
        margin-left: 0px;
        background: rgb(255,141,108);
        }

        .tab2 {
        margin-left: 120px;
        background: rgb(109,232,150);
        }

        .tab3 {
        margin-left: 240px;
        background: rgb(209,141,232);
        }

        .tab4 {
        margin-left: 360px;
        background: rgb(255,249,108);
        }
        
        .selected {
        height: 60px;
        top: 95px;
        color: rgb(65,150,255);
        }
        
        .tab p {
        position: relative;
        text-align: center;
        bottom: -15px;
        font-family: geosans;
        font-size: 20px;
        }
        
        .scrollWrap {
        min-height: 1280px;
        overflow: hidden;
        }
    </ui:style>
    
    <g:ScrollPanel styleName="{style.scrollWrap}" verticalScrollPosition='0'>
        <g:HTMLPanel ui:field="page">
            <header:Header/>
            <g:FocusPanel ui:field='tab1' styleName="{style.tab} {style.tab1}">
                <g:HTMLPanel>
                    <p>Statistik</p>
                </g:HTMLPanel>
            </g:FocusPanel>
            <g:FocusPanel ui:field='tab2' styleName="{style.tab} {style.tab2} {style.selected}">
                <g:HTMLPanel>
                    <p>Themenwahl</p>
                </g:HTMLPanel>
            </g:FocusPanel>
            <g:FocusPanel ui:field='tab3' styleName="{style.tab} {style.tab3}">
                <g:HTMLPanel>
                    <p>Freunde</p>
                </g:HTMLPanel>
            </g:FocusPanel>
            <g:FocusPanel ui:field='tab4' styleName="{style.tab} {style.tab4}">
                <g:HTMLPanel>
                    <p>Profil</p>
                </g:HTMLPanel>
            </g:FocusPanel> 
            <span ui:field='rail' class="{style.posThemenwahl}">
                <g:HorizontalPanel>
                    <my:HomeStatistik/>
                    <my:HomeThemenwahl ui:field='themenwahl'/>
                    <my:HomeFreunde ui:field='freunde'/>
                    <my:HomeProfile ui:field='profile'/>
                </g:HorizontalPanel>
            </span>
            <bread:Breadcrumb/>
            <bread:OnlyLogout ui:field='logout'/>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>
