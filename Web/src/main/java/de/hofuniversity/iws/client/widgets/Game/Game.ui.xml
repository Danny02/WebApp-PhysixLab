<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:header='urn:import:de.hofuniversity.iws.client.widgets'
             xmlns:bread='urn:import:de.hofuniversity.iws.client.widgets.SubWidgets'
             xmlns:playn='urn:import:de.hofuniversity.iws.client.playn'>
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        #contentAreaGame {
        background: rgba(255,249,108,0.7);
        height: 1080px;
        font-family: Arial, sans-serif;
        font-size: 14px;
        }

        #content {
        position: relative; 
        width: 960px;
        margin: 0px auto;
        }
        
        #content h1 {
        position: absolute;
        top: 75px; 
        left: 40px;
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        font-family: geosans;
        font-size: 60px;
        }

        #content h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }

        .element {
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }

        .game {
        position: absolute; 
        left: 40px;
        top: 195px; 
        width: 560px;
        height: 200px;
        }

        .scrollWrap {
        min-height: 1280px;
        overflow: hidden;
        }
        #playn-root {
        width:800px;
        }
    </ui:style>
    <g:ScrollPanel ui:field='sWrap' styleName="{style.scrollWrap}" VerticalScrollPosition="0">
        <g:HTMLPanel>
            <header:Header></header:Header>
            <div id="contentAreaGame">
                <div id="content">
                    <h1 ui:field="title"></h1>
                    <g:VerticalPanel ui:field="outerGame" styleName="{style.element} {style.game}{style.innerElement}">
                        <playn:PlayNWidget ui:field="gamePanel"/>
                        <g:HTMLPanel>
                            <p ui:field="beschreibung"></p>
                        </g:HTMLPanel>
                    </g:VerticalPanel>
                </div>
            </div>            
            <bread:BackButton/>
            <bread:Breadcrumb/>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>