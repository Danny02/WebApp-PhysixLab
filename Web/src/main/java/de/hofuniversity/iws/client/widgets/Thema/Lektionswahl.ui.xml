<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        #contentAreaLektionswahl {
        font-family: Arial, sans-serif;
        font-size: 14px;
        background: rgba(255,141,108,0.7);
        height: 1080px;
        }

        #content {
        position: relative; 
        width: 960px;
        margin: 0px auto;
        }

        #content h1 {
        position: absolute;
        top: 75px; 
        left: 40px;
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        font-family: geosans;
        font-size: 60px;
        }

        #content h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }

        .element {
        position: absolute;
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }
        
        .treeWrapper {
        position: absolute;
        left: 40px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div id="contentAreaLektionswahl">
            <div id="content">
                <h1>Lektionswahl</h1>
            </div>
            <g:HTMLPanel ui:field="lektionTree" styleName="{style.treeWrapper}">
                
            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>