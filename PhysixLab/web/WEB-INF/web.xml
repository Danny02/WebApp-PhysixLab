<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>PhysixLabRPC</servlet-name>
        <servlet-class>de.hofuniversity.server.PhysixLabRPCImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OAuthCallbackServlet</servlet-name>
        <servlet-class>de.hofuniversity.server.OAuthCallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhysixLabRPC</servlet-name>
        <url-pattern>/de.hofuniversity.iws/physixlabrpc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OAuthCallbackServlet</servlet-name>
        <url-pattern>/oauth_callback</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcomeGWT.html</welcome-file>
    </welcome-file-list>
</web-app>
