<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="physixLab">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>de.hofuniversity.iws.server.data.entities.Game</class>
    <class>de.hofuniversity.iws.server.data.entities.GameResult</class>
    <class>de.hofuniversity.iws.server.data.entities.Lesson</class>
    <class>de.hofuniversity.iws.server.data.entities.LessonProgress</class>
    <class>de.hofuniversity.iws.server.data.entities.NetworkAccount</class>
    <class>de.hofuniversity.iws.server.data.entities.SubjectArea</class>
    <class>de.hofuniversity.iws.server.data.entities.User</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost/physixlab"/>
      <property name="hibernate.connection.username" value="physixlab"/>  
      <property name="hibernate.connection.password" value="zinoba17"/>     
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>