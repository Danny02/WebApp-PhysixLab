<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        .wrap {
        font-family: geosans;
        font-size: 15px;
        height: 160px;
        position: absolute; 
        width: 400px;
        margin: 0px auto;
        left: 40px;
        }

        .wrap h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }
        
        .element {
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }
        
        .subject {
        position: absolute;
        width: 240px;
        height: 120px;
        top: 0px;
        left: 160px;
        }
        
        .outerImage {
        position: absolute;
        background: rgb(255,255,255);
        width: 80px;
        height: 80px;
        border-radius: 80px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        -webkit-transition:0.2s ease;
        -o-transition:0.2s ease;
        -moz-transition:0.2s ease;
        -ms-transition:0.2s ease;
        transition:0.2s ease;
        }
        
        .outerImage:hover {
        background: rgb(65,150,255);
        }

        .innerImage {
        border-radius: 70px;
        padding: 5px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="wrap" styleName="{style.wrap}">
        <g:FocusPanel ui:field="oImg" styleName="{style.outerImage}">
            <g:Image ui:field="iImg" styleName="{style.innerImage}" />
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>