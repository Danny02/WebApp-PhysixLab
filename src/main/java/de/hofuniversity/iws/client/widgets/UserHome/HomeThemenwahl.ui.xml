<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        #contentAreaThemenwahl {
        font-family: geosans;
        font-size: 15px;
        background: rgba(109,232,150,0.7);
        height: 1080px;
        }

        #content {
        position: relative; 
        width: 960px;
        margin: 0px auto;
        }

        #content h1 {
        position: absolute;
        top: 75px; 
        left: 40px;
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        font-size: 60px;
        }

        #content h2 {
        color: rgb(65,150,255);
        margin: 0 0 0 0;
        }

        .element {
        background: rgb(255,255,255);
        border-radius: 5px;
        box-shadow: 3px 3px 5px rgb(0,0,0);
        }
        
        .innerElement {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        }

        #news {
        position: absolute; 
        top: 75px; 
        left: 680px;
        width: 240px;
        height: 800px;
        }
    </ui:style>
    
    <g:HTMLPanel>
        <div id="contentAreaThemenwahl">
            <div id="content">
                <h1>Themenwahl</h1>
                <g:VerticalPanel ui:field='themaPanel'>
                    
                </g:VerticalPanel>
                <div class="{style.element}" id="news">
                    <div class="{style.innerElement}">
                        <h2>News</h2>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>