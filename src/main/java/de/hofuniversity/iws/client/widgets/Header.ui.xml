<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @font-face {
        font-family: geosans;
        src: url('GeosansLight.ttf');
        }

        body { 
        background-image: url('images/Startseite/Circle02.png');
        margin: 0px auto;
        font-family: Arial, sans-serif;
        font-size: 14px;
        }

        #headerArea {
        background: rgba(65,150,255,0.7);
        height: 155px;
        }

        #horizon {
        background: rgba(255,255,255,0.7);
        height: 10px;
        }

        #header {
        position: relative;
        width: 960px;
        margin: 0px auto;
        }

        #header img {
        margin: 25px 40px;
        }  
    </ui:style>
    <g:HTMLPanel>
        <div id="headerArea">
            <div id="header">
                <g:FocusPanel ui:field="logo">
                    <g:Image url="images/Startseite/PhysixLab_WebLogo.png" />
                </g:FocusPanel>
            </div>
        </div>
        <div id="horizon">
            <!-- Just a line -->
        </div>
    </g:HTMLPanel>
</ui:UiBinder>