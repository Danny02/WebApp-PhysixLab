<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my='urn:import:de.hofuniversity.iws.client.widgets.Lektion' 
             xmlns:header='urn:import:de.hofuniversity.iws.client.widgets'>
    <ui:style type='de.hofuniversity.iws.client.widgets.Lektion.Lektion.LektionStyle'>
        span {
        position: absolute;
        left: 50%;
        -webkit-transition:1.0s ease;
        -o-transition:1.0s ease;
        -moz-transition:1.0s ease;
        -ms-transition:1.0s ease;
        transition:1.0s ease;
        }
        
        .posLektion {
        margin-left: -480px;
        }
        
        .posTest {
        margin-left: -1440px;
        }
        
        .tab {
        position: absolute;
        left: 50%;
        width: 120px;
        height: 22px;
        top: 133px;
        -webkit-transition:0.2s;
        -o-transition:0.2s;
        -moz-transition:0.2s;
        -ms-transition:0.2s;
        transition:0.2s;
        }
        
        .tab:hover {
        font-size: 16px;
        }

        .tab1 {
        margin-left: 240px;
        background: rgb(109,232,150);
        }

        .tab2 {
        margin-left: 360px;
        background: rgb(209,141,232);
        }
        
        .selected {
        height: 32px;
        top: 123px;
        font-size: 16px;
        }
        
        b {
        padding-left: 5px;
        }
        
        .scrollWrap {
        min-height: 1280px;
        }
    </ui:style>
    <g:ScrollPanel ui:field='sWrap' styleName="{style.scrollWrap}">
        <g:HTMLPanel>
            <header:Header></header:Header>
            <g:FocusPanel ui:field='tab1' styleName="{style.tab} {style.tab1} {style.selected}">
                <g:HTMLPanel>
                    <b>Lektion</b>
                </g:HTMLPanel>
            </g:FocusPanel>
            <g:FocusPanel ui:field='tab2' styleName="{style.tab} {style.tab2}">
                <g:HTMLPanel>
                    <b>Test</b>
                </g:HTMLPanel>
            </g:FocusPanel>
            <span ui:field='rail' class="{style.posLektion}">
                <g:HorizontalPanel>
                    <my:Lesson></my:Lesson>
                    <my:Test></my:Test>
                </g:HorizontalPanel>
            </span>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>